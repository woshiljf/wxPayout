.loadingHeader{
  display: flex;
  justify-content:space-around;
  flex-direction: column;
  align-items: center;
}
.redCal{
  width: 71rpx;
  height: 71rpx;
  background-color: #EF5350;
  border-radius: 50%;
}
.title{
  opacity: 0.9;
font-family: PingFangSC-Medium;
font-size: 32rpx;
color: #000000;
letter-spacing: 0;
margin: 10rpx 0;
}

.loadingBox{
  display: flex;
  width: 120rpx;
  height: 50rpx;
  justify-content: space-around;
  align-items: center;

}
.one{
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;

}
.two{
  border-radius: 50%;
}
.one:nth-child(1){

  animation-delay:0s;
}
.one:nth-child(2){
  animation-delay:0.15s;
}
.one:nth-child(3){
  animation-delay:0.3s;
}

.one{
  background-color: #ccc;
  animation: go1 1s linear infinite;
}

@keyframes go1{

  0%,60%,100% {transform: scale(1);}
  30% {transform: scale(2);}
  
}