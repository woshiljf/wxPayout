/* 优惠start */
.youhuiBox{
  box-sizing: border-box;
}
.you1{
  width: 673rpx;
  height: 230rpx;
  background-color: #FF8F00;
  border-radius: 2% 2% 0 0;
  position: relative;
  margin-top: 50rpx;
  /* padding-left: 50rpx; */
  background-image: radial-gradient(circle at left bottom,white,white 10px,transparent 11px),
  radial-gradient(circle at right bottom,white,white 10px,transparent 11px);
}

.you1:after {
  content: '';
  position: absolute;
  bottom: 0px;
  width: 100%;
  height: 5rpx;
  background: radial-gradient(circle, #fff, #fff 4px, transparent 5px);
  background-size: 10px 10px;
}


